{
  "name": "mrrx-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@mrrx/web",
    "dev:api": "turbo run dev --filter=@mrrx/api",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "db:migrate": "turbo run db:migrate --filter=@mrrx/api",
    "db:seed": "turbo run db:seed --filter=@mrrx/api",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "eslint": "^9.15.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "~5.8.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
