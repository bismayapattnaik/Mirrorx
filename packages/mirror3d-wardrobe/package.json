{
  "name": "@mirrorx/mirror3d-wardrobe",
  "version": "1.0.0",
  "description": "Garment management system for 3D Virtual Mirror",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "three": ">=0.150.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "tsup": "^8.0.1",
    "@types/node": "^20.10.0",
    "@types/three": "^0.160.0"
  },
  "keywords": ["wardrobe", "garment", "clothing", "3d"],
  "license": "MIT"
}
